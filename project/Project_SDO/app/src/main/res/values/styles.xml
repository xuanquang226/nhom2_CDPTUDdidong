<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FourImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <!--</item> -->
    </style>

    <style name="paddingRight">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="paddingLeft">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Txt">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dangkyLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dangkyEditTextStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawableLeft">@drawable/phone</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/trang</item>
    </style>

    <style name="dangkyButtonStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_radius</item>
        <item name="android:textColor">@color/trang</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="dangnhapButtonStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#632523</item>
        <item name="android:textColor">@color/trang</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="registerButton">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#632523</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="registerLinerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="icon_text">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/trang</item>
    </style>
    <style name="contentInfo">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>
