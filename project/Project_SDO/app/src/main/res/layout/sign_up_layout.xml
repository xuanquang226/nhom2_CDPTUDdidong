<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.quang.project_sdo.SignUpActivity">
    <LinearLayout
        style="@style/dangkyLinearStyle"
        android:layout_weight="3">

        <ImageView
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:src="@drawable/cardiogram" />
    </LinearLayout>

    <LinearLayout
        style="@style/dangkyLinearStyle"
        android:layout_weight="5">

        <EditText
            android:id="@+id/edtEmail"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangky_username" />

        <EditText
            android:id="@+id/edtPassword"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangky_pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtRePass"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangky_re_pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtAddress"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangky_adress" />

        <EditText
            android:id="@+id/edtPhone"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangky_phone"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinnerChoiceAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="42dp"
            android:entries="@array/TypeAccount">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="4">

        <Button
            android:id="@+id/btnOK"
            style="@style/dangkyButtonStyle"
            android:text="@string/dangky_ok" />
        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/btnCancelU"
            style="@style/dangkyButtonStyle"
            android:text="@string/dangky_cancel" />
    </LinearLayout>

</LinearLayout>
