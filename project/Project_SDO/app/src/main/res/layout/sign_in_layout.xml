<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.quang.project_sdo.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/cardiogram" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="5"
        >

        <EditText
            android:id="@+id/edtUser"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="8dp"
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/key"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangnhap_username"/>
        <EditText
            android:id="@+id/edtPass"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/mail"
            android:paddingLeft="10dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/mail"
            style="@style/dangkyEditTextStyle"
            android:hint="@string/dangnhap_pass"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="3">

        <Button
            android:id="@+id/btnSignInP"
            style="@style/dangnhapButtonStyle"
            android:background="@drawable/button_radius"
            android:text="@string/dangnhap_singin"
            />
        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/btnCancel"
            style="@style/dangnhapButtonStyle"
            android:background="@drawable/button_radius"
            android:text="@string/dangnhap_cancel"
            />
    </LinearLayout>

</LinearLayout>
