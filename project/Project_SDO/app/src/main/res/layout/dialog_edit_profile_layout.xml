<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <EditText
        android:id="@+id/txtusernameD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:textColor="@color/colorDen" />

    <EditText
        android:id="@+id/txtsdtD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="096988xxx"
        android:textColor="@color/colorDo"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtaddressD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="74/x/x Ðường 6, Linh đông, quận Thủ Đức"
        android:textColor="@color/colorXanhBien"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmEdit"
        android:text="OK"/>
</LinearLayout>