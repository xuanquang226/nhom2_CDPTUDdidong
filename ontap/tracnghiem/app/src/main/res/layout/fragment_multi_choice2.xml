<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.edu.tdc.tracnghiem.fragments.MultiChoice2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lblQuestion_margin"
            android:text="@string/question2" />

        <EditText
            android:id="@+id/edtCau2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:editable="false"
            android:lines="2" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <RadioButton
                android:id="@+id/radA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/choice" />

            <RadioButton
                android:id="@+id/radB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/radA"
                android:layout_marginLeft="@dimen/choice_margin"
                android:layout_toRightOf="@id/radA"
                android:text="@string/choice" />

            <RadioButton
                android:id="@+id/radC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/radA"
                android:layout_below="@id/radA"
                android:layout_marginTop="@dimen/choice_margin_top"
                android:text="@string/choice" />

            <RadioButton
                android:id="@+id/radD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/radC"
                android:layout_alignLeft="@id/radB"
                android:layout_toRightOf="@id/radC"
                android:text="@string/choice" />
        </RelativeLayout>
    </RadioGroup>

</LinearLayout>
